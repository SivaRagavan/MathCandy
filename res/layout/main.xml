    <LinearLayout
            android:id="@+id/note_bar"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/button_bar"
            android:layout_gravity="bottom"
            android:paddingLeft="63dp"
